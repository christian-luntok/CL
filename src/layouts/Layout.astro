---
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en" class="">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="stylesheet" href="https://use.typekit.net/szo7kfv.css">
	</head>
	<body>
		<main id="main" data-scroll-container>
			<slot />
		</main>
		<script src="/script/general.js" is:inline type="module"></script>
		<script src="/script/locomotive-scroll.min.js" is:inline type="module"></script>
	</body>
</html>

<style lang="scss" is:global>
	@use '../styles/reset.scss' as *;
	@use '../styles/mixin.scss' as *;
	@import  '../../node_modules/locomotive-scroll/src/locomotive-scroll.scss';
	:root {
		--font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
		--font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
		--font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);
		--font-main: freight-display-pro, serif;
		--bg-primary: rgb(255, 255, 255);
		--color-text: #28292A;
		--color-bg: hsl(10, 21%, 95%);
		--color-border: hsl(17, 24%, 90%);
	}

	/* 
	// Start adding styling
	*/
	html {
		font-family: system-ui, sans-serif;
		font-size: var(--font-size-base);
		color: var(--color-text);
		background-color: var(--bg-primary);
	}

	body {
		margin: 0;
		background-image: url(../img/noise-bg.png);
		background-size:rem(150) rem(150);
	}

	main {
		&#main {
			width:100%;
		}
	}

	:global(h1) {
		font-size: var(--font-size-xl);
	}

	:global(h2) {
		font-size: var(--font-size-lg);
	}

	:global(code) {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}

	h1,h2,h3,h4,h5,h6 {
		font-family:freight-display-pro, serif;
		font-weight:600;
	}
</style>
