---
import { Icon } from 'astro-icon';
---
<header class="flex flex-col section-wrapper justify-center px-5 xl:px-0 sm:px-0">
    <nav class="m-auto flex items-center justify-between w-full relative mx-auto pt-8 pb-8 bg-opacity-60">
        <a href="#main" class="skip-nav hidden">Skip to content</a>
        <div class="main-nav flex items-center">
            <button id="mobile-menu-btn" class="mobile-menu visible md:hidden" aria-label="Toggle menu" type="button">
                <Icon id="mobile-menu-burger" name="ci:menu-duo" class="h-5 w-5 text-grey dark:text-grey-100 fill-grey dark:fill-grey-100" />
                <Icon id="mobile-menu-close" name="ep:close" class="hidden h-5 w-5 text-grey dark:text-grey-100 fill-grey dark:fill-grey-100" />
            </button>
            <a class="font-semibold text-grey-800 dark:text-grey-200 dark:hover:text-white hidden md:inline-block p-1 sm:px-3 sm:py-2 rounded-md hover:bg-grey-100/30 dark:hover:bg-grey-200/30 transition-all ease-in-out duration-300" href="/">
                <span class="">home</span>
            </a>
            <a class="font-semibold text-grey-800 dark:text-grey-200 dark:hover:text-white hidden md:inline-block p-1 sm:px-3 sm:py-2 rounded-md hover:bg-grey-100/30 dark:hover:bg-grey-200/30 transition-all ease-in-out duration-300" href="/logs">
                <span class="">logs</span>
            </a>
            <a class="font-semibold text-grey-800 dark:text-grey-200 dark:hover:text-white hidden md:inline-block p-1 sm:px-3 sm:py-2 rounded-md hover:bg-grey-100/30 dark:hover:bg-grey-200/30 transition-all ease-in-out duration-300" href="/playground">
                <span class="">playground</span>
            </a>
        </div>
        <!-- /.main-nav ml-2 -->
        <button id="theme-toggle" aria-label="Toggle Dark Mode" type="button" class="w-9 h-9  m-1 sm:mx-3 sm:my-2 rounded-md bg-grey-100/30 hover:bg-grey-100 dark:bg-grey-600 flex items-center justify-center hover:ring-2 dark:hover:bg-grey-200/30 ring-grey dark:ring-grey-100 dark:hover:ring-grey-200/80 transition-all ease-in-out duration-300">
            <Icon id="theme-toggle-dark-icon" name="eva:moon-fill" class="hidden w-5 h-5 text-grey dark:text-grey-200 dark:fill-grey-200 fill-grey" />
            <Icon id="theme-toggle-light-icon" name="ic:round-wb-sunny" class="hidden w-5 h-5 text-grey dark:text-grey-200 dark:fill-grey-200 fill-grey" />
        </button>
    </nav>
    <!-- /.section-wrapper -->
</header>