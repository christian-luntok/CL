---
import Layout from '../layouts/MainLayout.astro';
import Title from '../components/Title.astro';
---

<Layout title="Christian Luntok">
	<Title 
		title="Christian Luntok"
		github_link="https://github.com/christian-luntok"
		linkedin_link="https://www.linkedin.com/in/christian-luntok/"
	/>
</Layout>

<style lang="scss" is:global>
	@use '../styles/mixin.scss' as *;
	h1 {
		&.name-title {
			font-size:rem(18);
		}
	}

	@keyframes pulse {
		0%,
		100% {
			background-position-y: 0%;
		}
		50% {
			background-position-y: 80%;
		}
	}

	.introduction-list {
		font-family:var(--font-main);
		li {
			font-size:rem(28);
			display:block;
			@screen md {
				font-size: rem(28);
				&:not(:last-child) {
				margin-right:rem(8);
				}
			}
		}
	}


</style>
