---
import Layout from '@layouts/MainLayout.astro';
import Title from '@components/Title.astro';
import GetLogs from '@components/GetLogs.astro';


---

<Layout title="ðŸ‘‹ Hey, It's me Christian Luntok" description="Welcome to this little corner of the web where I share my thoughts and logs within the web developent space. I hope you find some of them interesting. If so, I'd love to hear from you! Drop an email to hey@cjluntok.com.">
	<Title title="Exploring technologies to create reliable, creative and effective digital experiences." />
	<div class="latest-logs text-primaryGrey-200 dark:text-white flex flex-col section-wrapper justify-center px-8 py-8 sm:px-3">
		<h2 class="text-xl mb-8 text-white">Latest Posts</h2>
		<div class="logs">
			<GetLogs category=""/>
		</div>
		<!-- /.logs -->
	</div>
	<!-- /.latest-logs -->
</Layout>

<style lang="scss" is:global>
	@use '../styles/mixin.scss' as *;
	h1 {
		&.name-title {
			font-size:rem(24);
		}
	}

	.title-wrapper {
		max-width: rem(900);
	}

	.title-section {
		max-width: rem(580);
	}

	.content-section {
		color: var(--offColor-text);
		p {
			margin-bottom: rem(32);
			&:last-child {
				margin-bottom:0;
			}
		}
		a {
			color: var(--offColor-text);
			text-decoration: underline;
		}
	}
	.logs {
		.log-item {
		}
	}

	.introduction-list {
		font-family:var(--font-main);
		li {
			font-size:rem(24);
			font-weight: 700;
			display:block;
			@screen md {
				font-size: rem(26);
				&:not(:last-child) {
				margin-right:rem(8);
				}
			}
		}
	}
</style>
